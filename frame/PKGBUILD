# Maintainer: Balló György <ballogyor+arch at gmail dot com>

pkgname=frame
pkgver=2.4.4
pkgrel=1
pkgdesc="Handles the buildup and synchronization of a set of simultaneous touches"
arch=('i686' 'x86_64')
url="https://launchpad.net/frame"
license=('LGPL')
depends=('libxi' 'gcc-libs')
makedepends=('xorg-server-devel' 'asciidoc')
options=('!libtool' '!emptydirs')
source=(https://launchpad.net/frame/trunk/$pkgver/+download/$pkgname-$pkgver.tar.xz)
md5sums=('54ce5c9b098bbb7b90a06011ea754d4d')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
              --disable-static
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
